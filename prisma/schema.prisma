generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum MessageType {
  TEXT
  IMAGE
  PAYMENT_SENT
  PAYMENT_REQUEST
  SYSTEM
}

enum PaymentStatus {
  PENDING
  COMPLETED
  DECLINED
  CANCELLED
}

enum UserRole {
  USER
  ADMIN
}

enum VideoSessionStatus {
  ACTIVE
  ENDED
}

enum VideoSignalType {
  OFFER
  ANSWER
  ICE
  PEER_LEFT
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  displayName  String
  avatarUrl    String?
  passwordHash String
  balance      Float    @default(0)
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())

  conversations ConversationMember[]
  sentMessages  Message[]
  sentPayments     Payment[] @relation("PaymentSender")
  receivedPayments Payment[] @relation("PaymentReceiver")
  contacts         Contact[] @relation("UserContacts")
  contactOf        Contact[] @relation("ContactOf")
  ownedVideoServers VideoServer[] @relation("VideoServerOwner")
  videoQueueEntries VideoQueueEntry[]
}

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members  ConversationMember[]
  messages Message[]
  payments Payment[]
}

model ConversationMember {
  id             String   @id @default(cuid())
  conversationId String
  userId         String
  joinedAt       DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@unique([conversationId, userId])
}

model Message {
  id             String      @id @default(cuid())
  conversationId String
  senderId       String
  content        String?
  imageUrl       String?
  type           MessageType @default(TEXT)
  createdAt      DateTime    @default(now())
  readBy         String      @default("[]")

  conversation Conversation @relation(fields: [conversationId], references: [id])
  sender       User         @relation(fields: [senderId], references: [id])
  payment      Payment?
}

model Payment {
  id             String        @id @default(cuid())
  conversationId String
  senderId       String
  receiverId     String
  amount         Float
  note           String?
  status         PaymentStatus @default(PENDING)
  messageId      String        @unique
  createdAt      DateTime      @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
  sender       User         @relation("PaymentSender", fields: [senderId], references: [id])
  receiver     User         @relation("PaymentReceiver", fields: [receiverId], references: [id])
  message      Message      @relation(fields: [messageId], references: [id])
}

model Contact {
  id        String   @id @default(cuid())
  userId    String
  contactId String
  createdAt DateTime @default(now())

  user    User @relation("UserContacts", fields: [userId], references: [id])
  contact User @relation("ContactOf", fields: [contactId], references: [id])

  @@unique([userId, contactId])
}

model VideoServer {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  isActive    Boolean  @default(true)
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy    User               @relation("VideoServerOwner", fields: [createdById], references: [id])
  queueEntries VideoQueueEntry[]
  sessions     VideoSession[]
}

model VideoQueueEntry {
  id          String   @id @default(cuid())
  serverId    String
  userId      String   @unique
  createdAt   DateTime @default(now())
  heartbeatAt DateTime @default(now())

  server VideoServer @relation(fields: [serverId], references: [id], onDelete: Cascade)
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([serverId, createdAt])
}

model VideoSession {
  id         String             @id @default(cuid())
  serverId   String
  userAId    String
  userBId    String
  status     VideoSessionStatus @default(ACTIVE)
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  endedAt    DateTime?
  endedReason String?

  server  VideoServer   @relation(fields: [serverId], references: [id], onDelete: Cascade)
  signals VideoSignal[]

  @@index([serverId, status, updatedAt])
  @@index([userAId, status])
  @@index([userBId, status])
}

model VideoSignal {
  id        Int             @id @default(autoincrement())
  sessionId String
  fromUserId String
  toUserId  String
  type      VideoSignalType
  payload   String
  createdAt DateTime        @default(now())
  consumedAt DateTime?

  session VideoSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, toUserId, id])
}
